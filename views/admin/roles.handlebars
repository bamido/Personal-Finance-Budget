<section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title" style="width:50%; float:left;">List of {{pagetitle}}</h5>
              <p  style="border: 0px solid #000;  float:right; padding:20px;">                  
              <a href="roles/create" data-bs-title="Add New Role" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#largeModal" class="btn btn-primary btn-sm">
              <i class="fa fa-plus-circle"></i> Add New Role</a>
              </p>
              <p style="clear: both;"></p>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Updated At</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each roles}}
                  <tr>
                    <th scope="row">{{kounter}}</th>
                    <td>{{role_name}}</td>
                    <td nowrap>{{{dateFormat created_at 'DD MMMM, Y hh:mm:ss a'}}}</td>
                    <td nowrap>{{{dateFormat updated_at 'DD MMMM, Y hh:mm:ss a'}}}</td>
                    <td class="d-flexx">
                      <a href="roles/edit/{{role_id}}" data-bs-title="Edit {{role_name}} Role" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#largeModal" class="btn btn-primary btn-sm me-2">Edit</a> 
                      
                      <!-- <form action="roles/delete/{{role_id}}?newMethod=DELETE" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm me-2" />
                      </form> -->
                     
                 
                      <a name="deleter" id="deleter" value="{{role_id}}"  data-swaltext="Are you sure you want to delete this {{role_name}} role?" data-swalurl="roles/delete/{{role_id}}?newMethod=DELETE" data-swalsuccesstitle="Deleted!" 
                               data-swalsuccess="{{role_name}} role was successfully deleted!"
                               data-swalbtnconfirm="Yes, delete it!"
                               data-swalredirect="/roles" data-swalimage="" class="btn btn-danger btn-sm text-white"><i class="fa fa-trash"></i> Delete </a>
                        <a href="privileges/assign/{{role_id}}" class="btn btn-success btn-sm me-2">Assign Privileges</a> 
                      
                      </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>