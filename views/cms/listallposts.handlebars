<section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title" style="width:50%; float:left;">List of {{pagetitle}}</h5>
              <p  style="border: 0px solid #000;  float:right; padding:20px;">                  
              <a href="/threads"  class="btn btn-secondary btn-sm">
              <i class="fa fa-arrow-left"></i> Back to Threads</a>

               <a href="/threads/createpost/1" data-bs-title="Add New Post" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#extraLargeModal" class="btn btn-primary btn-sm">
              <i class="fa fa-plus-circle"></i> Add New Post</a>
              </p>
              <p style="clear: both;"></p>

              <!-- Table with stripped rows -->
              <table class="table datatable table-hover table-striped table-bordered">
                <thead class="bg-dark text-white">
                  <tr>
                    <th scope="col">#</th>
                    <th>Image</th>
                    <th>Thread</th>
                    <th scope="col">Post Title</th>
                    <th scope="col">Post Body</th>
                    <th scope="col">Status</th>
                    <th scope="col">Post View</th>
                    
                    <th scope="col">Created At</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each posts}}
                  <tr>
                    <td scope="row">{{inc @index}}</td>
                    <td><img src="/uploads/{{postimageurl}}" alt="image" class="img-fluid" /></td>
                    <td>{{threadname}}</td>
                    <td>{{posttitle}}</td>
                    <td>{{{trimString postbody 0 110}}}</td>
                    <td>                        
                        <span class="badge bg-{{{isPublished poststatus}}} rounded-pill">
                        {{poststatus}}
                        </span>                        
                    </td>
                    <td>{{postview}}</td>
                    
                    <td nowrap>{{{dateFormat created_at 'DD MMMM, Y hh:mm:ss a'}}}</td>
                    <td>
                     
                        <ul class="nav navbar-right"> 
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-cog fa"></i></a>
                                <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right" role="menu">
                                <li class="dropdown-item">                                    
                                    <a href="/threads/editpost/{{post_id}}" data-bs-title="Edit: {{posttitle}} Section" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#extraLargeModal" class="btn btn-link"><i class="fa fa-edit"></i> Edit Post</a> 
                                </li>                                                                                                
                                                                                            
                                </ul>
                            </li>
                        </ul> 

                        
                      </td>
                  </tr>
                  {{/each}}
                </tbody>
                
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>