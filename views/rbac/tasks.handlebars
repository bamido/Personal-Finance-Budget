<section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title" style="width:50%; float:left;">List of {{pagetitle}}</h5>
              <p  style="border: 0px solid #000;  float:right; padding:20px;">                  
              <a href="tasks/create" data-bs-title="Add New Task" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#largeModal" class="btn btn-primary btn-sm">
              <i class="fa fa-plus-circle"></i> Add New Task</a>
              </p>
              <p style="clear: both;"></p>

              <!-- Table with stripped rows -->
              <table class="table datatable table-hover table-striped table-bordered">
                <thead class="bg-dark text-white">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Module</th>
                    <th scope="col">Label</th>
                    <th scope="col">Method</th>
                    <th scope="col">Route</th>
                    <th scope="col">Nav Bar</th>
                    <th scope="col">Order</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each tasks}}
                  <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{module_title}}</td>
                    <td>{{task_label}}</td>
                    <td>{{task_method}}</td>
                    <td>{{task_route}}</td>                    
                    <td>{{isnavbar}}</td>
                    <td nowrap>{{task_order}}</td>
                    <td>
                     
                        <ul class="nav navbar-right"> 
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-cog fa"></i></a>
                                <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right" role="menu">
                                <li class="dropdown-item">                                    
                                    <a href="tasks/edit/{{task_id}}" data-bs-title="Edit {{task_label}}" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#largeModal" class="btn btn-link"><i class="fa fa-edit"></i> Edit</a> 
                                </li>  
                                <li class="dropdown-divider"></li>
                                <li class="dropdown-item">
                                    <a name="deleter" id="deleter" value="{{task_id}}"  data-swaltext="Are you sure you want to delete this {{task_label}} task?" data-swalurl="tasks/delete/{{task_id}}?newMethod=DELETE" data-swalsuccesstitle="Deleted!" 
                               data-swalsuccess="{{task_label}} task was successfully deleted!"
                               data-swalbtnconfirm="Yes, delete it!"
                               data-swalredirect="/tasks" data-swalimage="" class="btn btn-link"><i class="fa fa-trash"></i> Delete </a>

                                </li> 
                                
                                                                                            
                                </ul>
                            </li>
                        </ul> 

                        
                      </td>
                  </tr>
                  {{/each}}
                </tbody>
                
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>