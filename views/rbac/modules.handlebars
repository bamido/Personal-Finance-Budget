<section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title" style="width:50%; float:left;">List of {{pagetitle}}</h5>
              <p  style="border: 0px solid #000;  float:right; padding:20px;">                  
              <a href="modules/create" data-bs-title="Add New Module" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#largeModal" class="btn btn-primary btn-sm">
              <i class="fa fa-plus-circle"></i> Add New Module</a>
              </p>
              <p style="clear: both;"></p>

              <!-- Table with stripped rows -->
              <table class="table datatable table-hover table-striped table-bordered">
                <thead class="bg-dark text-white">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Module</th>
                    <th scope="col">Icon</th>
                    <th scope="col">Order</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Updated At</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each modules}}
                  <tr>
                    <th scope="row">{{kounter}}</th>
                    <td>{{module_title}}</td>
                    <td>{{module_icon}}</td>
                    <td>{{module_order}}</td>
                    <td nowrap>{{{dateFormat created_at 'DD MMMM, Y hh:mm:ss a'}}}</td>
                    <td nowrap>{{{dateFormat updated_at 'DD MMMM, Y hh:mm:ss a'}}}</td>
                    <td>
                      <!-- <a href="roles/edit/{{module_id}}" data-bs-title="Edit {{module_title}} Role" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#largeModal" class="btn btn-primary btn-sm me-2">Edit</a> 
                       -->
                      <!-- <form action="roles/delete/{{role_id}}?newMethod=DELETE" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm me-2" />
                      </form> -->
                     
                 
                      <!-- <a name="deleter" id="deleter" value="{{module_id}}"  data-swaltext="Are you sure you want to delete this {{module_title}} role?" data-swalurl="roles/delete/{{module_id}}?newMethod=DELETE" data-swalsuccesstitle="Deleted!" 
                               data-swalsuccess="{{module_title}} role was successfully deleted!"
                               data-swalbtnconfirm="Yes, delete it!"
                               data-swalredirect="/modules" data-swalimage="" class="btn btn-danger btn-sm text-white"><i class="fa fa-trash"></i> Delete </a> -->

                        <ul class="nav navbar-right"> 
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-cog fa"></i></a>
                                <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right" role="menu">
                                <li class="dropdown-item">                                    
                                    <a href="modules/edit/{{module_id}}" data-bs-title="Edit {{module_title}} Module" data-bs-remote="false" data-bs-toggle="modal" data-bs-target="#largeModal" class="btn btn-link"><i class="fa fa-edit"></i> Edit</a> 
                                </li>  
                                <li class="dropdown-divider"></li>
                                <li class="dropdown-item">
                                    <a name="deleter" id="deleter" value="{{module_id}}"  data-swaltext="Are you sure you want to delete this {{module_title}} module?" data-swalurl="modules/delete/{{module_id}}?newMethod=DELETE" data-swalsuccesstitle="Deleted!" 
                               data-swalsuccess="{{module_title}} module was successfully deleted!"
                               data-swalbtnconfirm="Yes, delete it!"
                               data-swalredirect="/modules" data-swalimage="" class="btn btn-link"><i class="fa fa-trash"></i> Delete </a>

                                </li> 
                                
                                                                                            
                                </ul>
                            </li>
                        </ul> 

                        
                      </td>
                  </tr>
                  {{/each}}
                </tbody>
                
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>